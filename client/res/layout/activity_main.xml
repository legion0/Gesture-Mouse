<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/connectedPcName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Device Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/connectedAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pcConnectedName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:text="App Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/gestureBtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/largebluebutton"
        android:text="Gesture Activate" />

    <Button
        android:id="@+id/goToMouseBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/connectedAppName"
        android:layout_alignBottom="@+id/connectedAppName"
        android:layout_alignRight="@+id/connectedPcName"
        android:background="@drawable/mouse"
        android:text="" />

    <Button
        android:id="@+id/learnGestureBtn"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignBaseline="@+id/goToMouseBtn"
        android:layout_alignBottom="@+id/goToMouseBtn"
        android:layout_toRightOf="@+id/goToMouseBtn"
        android:background="@drawable/gesture" />

</RelativeLayout>